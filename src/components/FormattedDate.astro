---
interface Props {
  date: Date;
  showYear?: boolean;
}

const { date, showYear = false } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-uk", {
      day: "numeric",
      month: "short",
      year: showYear ? "numeric" : undefined
    })
  }
</time>
