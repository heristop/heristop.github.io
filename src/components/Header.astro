---
import HeaderLink from "./HeaderLink.astro";
const { image = "/images/zazen.webp" } = Astro.props;
import { SITE_TITLE } from "../consts";

const title = `{ ${SITE_TITLE.replace(" ", "_")} }`;
---

<header>
  <nav class="header">
    <div class="menu">
      <h1 class="title"><a href="/">{title}</a></h1>

      <HeaderLink class="extra" href="/blog">blog</HeaderLink>

      <HeaderLink class="extra" href="/projects">projects</HeaderLink>

      <HeaderLink class="extra" href="/about">about</HeaderLink>
    </div>

    <div class="banner rounded-md shadow-md">
      <div
        class="img rounded-md"
        style={`background: transparent url(${image}) no-repeat center center / cover`}
      >
      </div>
    </div>
  </nav>
</header>
