---
export interface Props {
  name: string;
  size?: number;
  color?: string;
  class?: string;
  'aria-label'?: string;
  'aria-hidden'?: boolean;
  role?: 'img' | 'presentation' | 'none';
}

const {
  name,
  size = 24,
  color = 'var(--primary-color)',
  class: className = '',
  'aria-label': ariaLabel,
  'aria-hidden': ariaHidden,
  role = 'img',
} = Astro.props;

const spritePath = `/icons/feather.svg#${name}`;
---

<svg
  class={`icon ${className}`}
  width={size}
  height={size}
  fill="none"
  stroke={color}
  stroke-width="1.5"
  viewBox="0 0 24 24"
  xmlns="http://www.w3.org/2000/svg"
  role={role}
  aria-label={ariaLabel}
  aria-hidden={ariaHidden}
>
  <use href={spritePath}></use>
</svg>

<style>
  .icon {
    display: inline-block;
    stroke-linecap: round;
    stroke-linejoin: round;
  }
</style>
