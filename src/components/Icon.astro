---
export interface Props {
  name: string;
  size?: number;
  color?: string;
  class?: string;
}

const { name, size = 24, color = "var(--primary-color)", class: className = "" } = Astro.props;
---

<svg
  class={`icon ${className}`}
  width={size}
  height={size}
  fill="none"
  stroke={color}
  stroke-width="1.5"
  viewBox="0 0 24 24"
  xmlns="http://www.w3.org/2000/svg"
>
  <use href={`/icons/feather.svg#${name}`}></use>
</svg>

<style>
  .icon {
    display: inline-block;
    stroke-linecap: round;
    stroke-linejoin: round;
  }
</style>