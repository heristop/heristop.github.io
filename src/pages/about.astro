---
import SocialNetworks from "../components/SocialNetworks.astro";
import Layout from "../layouts/Layout.astro";
import Icon from "../components/Icon.astro";
---

<Layout title="About" description="About page">
  <blockquote>
    Hello, I'm <b>heristop</b>! <span class="about-info__wave">ðŸ‘‹</span> I'm a Chapter Lead &
    Web Development Expert Passionate about crafting high-performance web applications,
    I lead teams of talented developers. My expertise spans JavaScript, TypeScript,
    Vue, React, Node.js, PHP, and Symfony. Constantly pursuing innovation, I strive
    to blend technical leadership with cutting-edge knowledge to design state-of-the-art
    web solutions.
  </blockquote>

  <section class="about-info" aria-labelledby="personal-info-heading">
    <h2 class="sr-only" id="personal-info-heading">Personal Information</h2>
    <ul class="about-info__list">
      <li class="about-info__item about-info__item--with-icon">
        <Icon name="briefcase" size={20} aria-hidden={true} />
        <div class="about-info__content">
          <div class="about-info__role">Chapter Lead</div>
          <span class="about-info__subtitle">@Carrefour SI</span>
        </div>
      </li>
      <li class="about-info__item"><Icon name="calendar" size={20} aria-hidden={true} /> 4 November</li>
      <li class="about-info__item"><Icon name="map-pin" size={20} aria-hidden={true} /> Paris, France</li>
      <li class="about-info__item"><Icon name="link" size={20} aria-hidden={true} /> <a href="https://heristop.github.io/about">Permalink</a></li>
    </ul>
  </section>

  <h2 class="icon-heading social-heading">
    <Icon name="share-2" size={20} /> Zen Broadcasts
  </h2>

  <SocialNetworks filter="socialnetwork" />
</Layout>

<style>
  .about-info__wave {
    display: inline-block;
    font-size: 1.5em;
    animation: wave 1.8s ease-in-out 1;
  }

  .about-info__item--with-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.35rem;
  }

  .about-info__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.25rem;
  }

  @media screen and (width >= 40rem) {
    .about-info__item--with-icon {
      flex-direction: row;
      gap: 0.5rem;
    }

    .about-info__content {
      align-items: flex-start;
      text-align: left;
    }
  }

  .about-info__role {
    font-weight: 700;
  }

  @keyframes wave {
    0%,
    100% {
      transform: rotate(0deg);
    }
    20%,
    60% {
      transform: rotate(-25deg);
    }
    40%,
    80% {
      transform: rotate(25deg);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const waveEmoji = document.querySelector(".about-info__wave") as HTMLElement;
    if (waveEmoji) {
      waveEmoji.addEventListener("mouseenter", () => {
        waveEmoji.style.animation = "none";
        setTimeout(() => {
          waveEmoji.style.animation = "wave 1.8s ease-in-out 3";
        }, 10);
      });
    }
  });
</script>
