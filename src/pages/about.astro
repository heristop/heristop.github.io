<style>
  .wave {
    display: inline-block;
    font-size: 1.5em;
    animation: wave 1.8s ease-in-out 1;
  }

  @keyframes wave {
    0%,
    100% {
      transform: rotate(0deg);
    }
    20%,
    60% {
      transform: rotate(-25deg);
    }
    40%,
    80% {
      transform: rotate(25deg);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const waveEmoji = document.querySelector(".wave") as HTMLElement;
    if (waveEmoji) {
      waveEmoji.addEventListener("mouseenter", () => {
        waveEmoji.style.animation = "none";
        setTimeout(() => {
          waveEmoji.style.animation = "wave 1.8s ease-in-out 3";
        }, 10);
      });
    }
  });
</script>