{
  "name": "zazencode",
  "type": "module",
  "version": "2.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint": "eslint src",
    "style:lint": "stylelint 'src/**/*.css' 'src/**/*.scss'",
    "md:lint": "markdownlint src/content/**/*.md --ignore node_modules --disable=MD013 --disable=MD033",
    "md:check": "markdown-link-check src/content/**/*.md --ignore node_modules -c .markdown-link-check.json",
    "format": "prettier --write 'src/**/*.ts'",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "test:visual:headed": "playwright test --headed"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.3.7",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "astro": "^5.14.1",
    "astro-icon": "^1.1.5",
    "katex": "^0.16.23",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rehype": "^13.0.2",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.0.0",
    "vite": "^7.1.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/hast": "^3.0.4",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "markdown-link-check": "3.13.7",
    "markdownlint-cli": "^0.45.0",
    "playwright": "^1.56.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1"
  }
}
