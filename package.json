{
  "name": "zazencode",
  "type": "module",
  "version": "2.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint": "oxlint src --type-aware",
    "lint:fix": "oxlint --fix src",
    "lint:strict": "oxlint src --deny-warnings --type-aware",
    "style:lint": "stylelint 'src/**/*.css' 'src/**/*.scss'",
    "md:lint": "markdownlint src/content/**/*.md --ignore node_modules --disable=MD013 --disable=MD033",
    "md:check": "markdown-link-check src/content/**/*.md --ignore node_modules -c .markdown-link-check.json",
    "format": "prettier --write 'src/**/*.ts'",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "test:visual:headed": "playwright test --headed",
    "optimize:images": "node scripts/optimize-images.mjs",
    "optimize:images:dry": "node scripts/optimize-images.mjs --dry-run"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/markdown-remark": "^6.3.10",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/react": "^4.4.2",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.16.15",
    "astro-icon": "^1.1.5",
    "katex": "^0.16.28",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rehype": "^13.0.2",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.1.0",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/hast": "^3.0.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdown-link-check": "3.14.2",
    "markdownlint-cli": "^0.47.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.2",
    "playwright": "^1.58.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.97.3",
    "sharp": "^0.34.5",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0"
  }
}
