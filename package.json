{
  "name": "zazencode",
  "type": "module",
  "version": "2.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint": "eslint src",
    "md:lint": "markdownlint src/content/**/*.md --ignore node_modules --disable=MD013",
