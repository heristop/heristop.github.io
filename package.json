{
  "name": "zazencode",
  "type": "module",
  "version": "2.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint": "eslint src",
    "style:lint": "stylelint 'src/**/*.css' 'src/**/*.scss'",
    "md:lint": "markdownlint src/content/**/*.md --ignore node_modules --disable=MD013 --disable=MD033",
    "md:check": "markdown-link-check src/content/**/*.md --ignore node_modules -c .markdown-link-check.json",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/markdown-remark": "^5.2.0",
    "@astrojs/mdx": "^3.1.7",
    "@astrojs/react": "^3.6.2",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/tailwind": "^5.1.1",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "astro": "^4.15.8",
    "katex": "^0.16.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype": "^13.0.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.6.2",
    "unist-util-visit": "^5.0.0",
    "vite": "^5.4.7"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.11.0",
    "eslint-plugin-astro": "^1.2.4",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "markdown-link-check": "^3.12.2",
    "markdownlint-cli": "^0.41.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1"
  }
}
