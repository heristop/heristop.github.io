{
  "name": "zazencode",
  "type": "module",
  "version": "2.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint": "eslint src",
    "style:lint": "stylelint 'src/**/*.css' 'src/**/*.scss'",
    "md:lint": "markdownlint src/content/**/*.md --ignore node_modules --disable=MD013 --disable=MD033",
    "md:check": "markdown-link-check src/content/**/*.md --ignore node_modules -c .markdown-link-check.json",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/markdown-remark": "^6.3.6",
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/tailwind": "^6.0.2",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "astro": "^5.13.5",
    "katex": "^0.16.22",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rehype": "^13.0.2",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tailwindcss": "3.4.16",
    "typescript": "^5.8.3",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.3.5"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "markdown-link-check": "3.13.7",
    "markdownlint-cli": "^0.44.0",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0"
  }
}
